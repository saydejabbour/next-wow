{
  "name": "@moondev/next-wow",
  "version": "2.0.3",
  "description": "React-based WOW.js â€” Reveal animations on scroll for React and Next.js",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "wowjs",
    "scroll animation",
    "nextjs",
    "animate.css",
    "reveal on scroll",
    "animation hook",
    "typescript"
  ],
  "author": "MoonDev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saydejabbour/next-wow.git"
  },
  "bugs": {
    "url": "https://github.com/saydejabbour/next-wow/issues"
  },
  "homepage": "https://github.com/saydejabbour/next-wow#readme",
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "dependencies": {
    "animate.css": "^4.1.1"
  },
  "devDependencies": {
    "typescript": "^5",
    "tsup": "^8",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  },
  "sideEffects": [
    "animate.css"
  ],
  "publishConfig": {
